Package: genepop
Type: Package
Title: Population Genetic Data Analysis Using Genepop
Version: 1.2.2
Date: 2023-01-19
Authors@R: c(person("François", "Rousset", role = c("aut", "cre", "cph"),
                     email = "francois.rousset@umontpellier.fr",
                     comment = c(ORCID = "0000-0003-4670-0371")),
